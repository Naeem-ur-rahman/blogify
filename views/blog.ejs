<!DOCTYPE html>
<html lang="en">

<head>
     <%- include("./partials/head") %>
          <title>Blogify | Blog</title>
</head>

<body>
     <%- include('./partials/nav') %>
          <div class="container mt-4 mb-4">
               <h1>
                    <%= blog.title %>
               </h1>
               <img src="<%= blog.coverImage %>" style="height: 20rem;" alt="">
               <pre class="mt-3"
                    style="overflow-x: auto; white-space: pre-wrap; white-space: -moz-pre-wrap; white-space: -pre-wrap; white-space: -o-pre-wrap; word-wrap: break-word;">
                    <%= blog.body %>
               </pre>
          </div>
          <div class="container mt-4 mb-4">
               <img src="<%= blog.createdBy.profileImageUrl %>" alt="" width="50px">
               <%= blog.createdBy.fullName %>
          </div>
          <div class="container mt-4 mb-4">
               <h2>Comments (<%= comments.length %>)</h2>
               <% if (locals.user) { %>
                    <form action="/blog/comment/<%= blog._id%>" method="post">
                         <div class="mt-3">
                              <input type="text" class="form-control" name="content" required
                                   placeholder="Enter Your Comment">
                              <button type="submit" class="btn btn-primary btn-sm mt-1">Add Comment</button>
                         </div>
                    </form>
                    <% } %>
                         <% comments.forEach(comment=> { %>
                              <div class="container mt-4 mb-4">
                                   <img src="<%= comment.createdBy.profileImageUrl %>" alt="" width="50px">
                                   <%= comment.createdBy.fullName %>
                                        <pre class="mt-2"><%= comment.content %></pre>
                              </div>
                              <% }) %>
          </div>
          <%- include('./partials/scripts') %>
</body>

</html>