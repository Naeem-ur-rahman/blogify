<!DOCTYPE html>
<html lang="en">

<head>
     <%- include("./partials/head") %>
          <title>Blogify | Home</title>
</head>

<body>
     <%- include('./partials/nav') %>
          <div class="container mt-3 mb-4">
               <div class="row row-col-4">
                    <% blogs.forEach(blog=> { %>
                         <div class="col">
                              <div class="card mt-4" style="width: 18rem;">
                                   <img src="<%= blog.coverImage %>" class="card-img-top"
                                        style="height:12rem;object-fit: cover;" alt="<%=blog.coverImage%>">
                                   <div class="card-body">
                                        <h5 class="card-title">
                                             <%= blog.title %>
                                        </h5>
                                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
                                   </div>
                              </div>
                         </div>
                         <% }) %>
               </div>
          </div>

          <%- include('./partials/scripts') %>
</body>

</html>